@model List<Produto>
@{
    ViewData["Title"] = "Página principal";
}

<div class="text-container">
    </br>
    <div class="text-center">
        <h1>Produtos</h1>
        <a role="button" class="btn btn-lg btn-block mt-4" style="background-color: #e3f2fd;" asp-controller="Produto" asp-action="Criar">Adicionar Produto</a>
    </div>
    <br />

    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Código</th>
                <th scope="col">Descrição</th>
                <th scope="col">Preço</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>

            @if(Model != null && Model.Any())
            {
                foreach(Produto produto in Model)
                {
                    <tr>
                        <th scope="row">@produto.Id</th>
                        <td>@produto.Nome</td>
                        <td>@produto.Codigo</td>
                        <td>@produto.Descricao</td>
                        <th scope="col">@produto.Preco</th>
                        <th>
                            <div class="btn-group" role="group" aria-label="Exemplo básico">
                                <a role="button" class="btn btn-success" asp-route-id="@produto.Id" asp-controller="Produto" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@produto.Id" asp-controller="Produto" asp-action="Apagar">Apagar</a>
                            </div>
                        </th>

                    </tr>
                }
            }

        </tbody>
    </table>








</div>
